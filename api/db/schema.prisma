datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id                         Int                          @id @default(autoincrement())
  email                      String                       @unique
  hashedPassword             String
  salt                       String
  resetToken                 String?
  resetTokenExpiresAt        DateTime?
  UsersToPlannedTransactions UsersToPlannedTransactions[]
  Category                   Category[]
  deleted                    DateTime?
}

model PlannedTransaction {
  id                         Int                          @id @default(autoincrement())
  name                       String
  amount                     Float
  Category                   Category                     @relation(fields: [categoryId], references: [id])
  categoryId                 Int
  icon                       String
  Timeframe                  Timeframe                    @relation(fields: [timeframeId], references: [id])
  timeframeId                Int
  UsersToPlannedTransactions UsersToPlannedTransactions[]
  deleted                    DateTime?
}

model Timeframe {
  id                 Int                  @id @default(autoincrement())
  name               String
  days               Int?
  monthSplits        Int?
  date               DateTime?
  PlannedTransaction PlannedTransaction[]
  deleted            DateTime?
}

model Category {
  id                 Int                  @id @default(autoincrement())
  name               String
  color              String
  icon               String
  User               User                 @relation(fields: [userId], references: [id])
  userId             Int
  PlannedTransaction PlannedTransaction[]
  deleted            DateTime?
}

model UsersToPlannedTransactions {
  id                   Int                @id @default(autoincrement())
  User                 User               @relation(fields: [userId], references: [id])
  userId               Int
  PlannedTransaction   PlannedTransaction @relation(fields: [plannedTransactionId], references: [id])
  plannedTransactionId Int
  createdAt            DateTime           @default(now())
  deleted              DateTime?
}
